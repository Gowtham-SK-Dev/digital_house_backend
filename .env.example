# Digital House Backend Environment Variables

# Server
PORT=5000
NODE_ENV=development

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=digital_house

# Database - MongoDB
MONGODB_URI=mongodb://localhost:27017/digital_house

# Database - MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DB=digital_house

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=7d

# Firebase
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email

# Supabase (Alternative to Firebase)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# OneSignal
ONESIGNAL_APP_ID=your_app_id
ONESIGNAL_REST_API_KEY=your_rest_api_key

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
META_PIXEL_ID=your_meta_pixel_id

# Socket.io
SOCKET_IO_CORS_ORIGIN=http://localhost:3000,http://localhost:8081

# Email Service (Optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email
SMTP_PASS=your_password
